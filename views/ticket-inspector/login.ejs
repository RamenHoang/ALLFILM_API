<%- include elements/loginheader.ejs %>

<div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-film green"></i>
                                <span class="red">ALLFilms </span>
                                <span class="white" id="id-text2">Soát vé</span>
                            </h1>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-film green"></i>
                                            Thông tin đăng nhập
                                        </h4>

                                        <div class="space-6"></div>

                                        <form method="post" action="/ticket-inspector/login">
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="text" name="username"
                                                               class="form-control"
                                                               placeholder="Username"
                                                               value="<%=data.username%>" required/>
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                    <span class="error"><%=errorData.username%></span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="password" name="password"
                                                               class="form-control"
                                                               placeholder="Password"
                                                               value="<%=data.password%>" required/>
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                    <span class="error"><%=errorData.password%> </span>
                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <button type="submit" class="width-40
                                                    pull-right btn btn-sm btn-primary">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">Đăng nhập</span>
                                                    </button>
                                                </div>

                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form>
                                    </div>
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->
                        </div><!-- /.position-relative -->
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->


<%- include elements/loginfooter.ejs %>
