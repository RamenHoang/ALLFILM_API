 
<%- include('../elements/header'); %> 

<div class="main-content">
        <div class="main-content-inner">
            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <ul class="breadcrumb">
                    <li> <i class="ace-icon fa fa-tachometer"></i> <a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a> </li>
                    <li class="active"><a href="<%=nodeAdminUrl%>/categories/list"> Categories </a> </li>
                    <li class="active">edit</li>
                </ul>  

                <div class="nav-search" id="nav-search">
                    <form class="form-search">
                        <span class="input-icon">
                            <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                            <i class="ace-icon fa fa-search nav-search-icon"></i>
                        </span>
                    </form>
                </div><!-- /.nav-search -->
            </div>

            <div class="page-content"> 
                <div class="page-header">
                    <h1>  Add New Category <small>    </h1> 
                </div><!-- /.page-header -->
 
                <div class="row">  
                    <div class="col-xs-12 col-sm-6">
                        <div class=" ">  
                            <form method="post" action="<%=nodeAdminUrl%>/categories/add">
                            <div class="widget-body">  
                                <div class="widget-main">  
                                    <div>
                                        <label for="form-field-select-1">Category Title</label> 
                                        <input type="text" name="title" value="<%=data.title%>" id="form-field-select-1" placeholder="Category Title" class="form-control">  
                                        <span class="error"><%=errorData.title%></span>  
                                    </div>
                                    <br> 
                                    <div> 
                                        <label for="form-field-select-2">Status</label> 
                                        <select class="form-control" name="is_active" id="form-field-select-2">
                                            <option value="1" <%=data.is_active==1 ? 'selected' : '' %>>Active</option>
                                            <option value="0" <%=data.is_active==1 ? 'selected' : '' %>>Inactive</option> 
                                        </select> 
                                        <span class="error"><%=errorData.is_active%></span>  
                                    </div> 
                                    <br><br>   
                                    <div> 
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button class="btn btn-info" type="submit">
                                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                                    Submit
                                                </button>  
                                                &nbsp; &nbsp; &nbsp;
                                                <a href="<%=nodeAdminUrl%>/categories/list%>"> <button class="btn" type="button">
                                                       Cancel 
                                                </button></a> 
                                            </div>   
                                        </div> 
                                        <div class="space-2"></div>  
                                    </div>    
                                </div>
                            </div>
                            </form> 
                        </div>
                    </div><!-- /.span --> 
                </div>  
            </div><!-- /.page-content -->
        </div>
    </div><!-- /.main-content -->


<%- include('../elements/footer'); %>  
 